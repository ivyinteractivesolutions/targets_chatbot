	"item": [
		{
			"name": "Session Management",
			"item": [
				{
					"name": "List All Sessions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/sessions",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sessions"
							]
						},
						"description": "Retrieve all chat sessions for the current user. Returns an array of sessions with session_id, title, and updated_at."
					},
					"response": []
				},
				{
					"name": "Create New Session",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"session_id\", jsonData.session_id);",
									"    console.log(\"Session ID saved:\", jsonData.session_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/sessions",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sessions"
							]
						},
						"description": "Create a new chat session. Returns a session_id that should be used for subsequent chat messages. The session_id is automatically saved to collection variables."
					},
					"response": []
				},
				{
					"name": "Get Session Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/sessions/{{session_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sessions",
								"{{session_id}}"
							]
						},
						"description": "Get full session details including chat history. Use this to load a previous conversation."
					},
					"response": []
				},
				{
					"name": "Rename Session",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"My Updated Chat Title\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/sessions/{{session_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sessions",
								"{{session_id}}"
							]
						},
						"description": "Update the title of an existing session. The title parameter is required."
					},
					"response": []
				},
				{
					"name": "Delete Session",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/sessions/{{session_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"sessions",
								"{{session_id}}"
							]
						},
						"description": "Delete a chat session permanently. This action cannot be undone."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing chat sessions (create, list, get, rename, delete)"
